@model CreateCustomerViewModel
@{
    ViewData["Title"] = "Create Customer";
}

<h1>@ViewData["Title"]</h1>
<hr />
@*@using (Html.BeginForm()){}*@

<form asp-controller="Customers" asp-action="Create" method="post">
    <div class="form-group" >
        <label asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group mt-4">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group mt-4">
        <label asp-for="Type"></label>
        <span asp-validation-for="Type"></span>
        <select asp-for="Type" asp-items="@Html.GetEnumSelectList(typeof(CustomerType))" class="form-control"  />
    </div>
    <button class="btn btn-primary mt-4">Send</button>
</form>