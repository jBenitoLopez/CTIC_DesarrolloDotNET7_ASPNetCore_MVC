@model DEMOFiltros.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
<form method="post" action="@Url.Action("Login", "Account")" class="col-6">
    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" class="form-control" value="@Model.Username" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="form-control" value="@Model.Password" />
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
</form>
